# Application
NODE_ENV=production
PORT=10000
FRONTEND_URL=https://your-frontend.onrender.com

# Database
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster-host>/tally?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace-with-strong-random-secret
VOTER_JWT_SECRET=replace-with-strong-random-secret
VOTER_KEY_ENCRYPTION_KEY=replace-with-32+char-strong-key

# Blockchain
RPC_URL=https://rpc.sepolia-api.lisk.com
CHAIN_ID=4202
CREATOR_PRIVATE_KEY=0xreplace_me
VOTER_PRIVATE_KEY=0xreplace_me

# Email (choose one provider)
# Resend
RESEND_API_KEY=re_xxx
RESEND_FROM=Tally <no-reply@yourdomain.com>

# OR SMTP
FROM_EMAIL=no-reply@yourdomain.com
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password

# Optional gas settings
# MAX_PRIORITY_FEE_GWEI=2
# MAX_FEE_GWEI=100
# CREATE_ELECTION_GAS_LIMIT=3000000
