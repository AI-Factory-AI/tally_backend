{
  "name": "electionschain-backend",
  "version": "1.0.0",
  "description": "Blockchain-powered organizational voting system backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
